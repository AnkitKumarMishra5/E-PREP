<% include ../partials/header %>
  <div class="row">
    <div class="col-md-4">
      
      <div class="thumbnail">
        <img src="<%= user.avatar %>" alt="user profile image">
        <div class="caption"><a href="mailto:<%= user.email %>"><center><%= user.email %></center></a></div>
      </div>
    </div>
    <div class="col-md-8">
      <table class="table-striped table-bordered table_show">
        <tbody>
          <tr>
            <th>User Name</th>
            <td><%= user.username %></td>
          </tr>
          <tr>
            <th>Name</th>
            <td><%= user.firstName + " " + user.lastName %></th>
          </tr>
          <tr>
            <th>Email</th>
            <td><%= user.email %></td>
          </tr>
          <tr>
            <th>Total Contribution</th>
            <td><%= user.contributed %></td>
          </tr>
          <tr>
            <th>Total test given</th>
            <td><%= user.appeared %></td>
          </tr>
          <tr>
            <th>Skills</th>
            <td><%= user.skills %></td>
          </tr>
          <tr>
            <th>Bio</th>
            <td><%= user.bio %></td>
          </tr>
        </tbody>
      </table>
    </div>
    
    <button class="btn  edit_button pull-right btn-primary">
    <a href="/users/<%= user._id%>/edit" class="editanchor">Edit Profile</a> </button>
  </div>
<% include ../partials/footer %>